local LoadingScreen = script.Parent
local Background = LoadingScreen:WaitForChild("Background")
local LoadingText = LoadingScreen:WaitForChild("LoadingText")

local function UpdateLoadingText()
    local loadingPhrases = {
        "Loading...",
        "Almost there...",
        "Preparing the game...",
        "Getting things ready...",
    }
    local randomIndex = math.random(1, #loadingPhrases)
    LoadingText.Text = loadingPhrases[randomIndex]
end

UpdateLoadingText()

-- You can put your loading logic here
-- For example, load assets, set up the game environment, etc.

-- Simulate loading progress for demonstration
for i = 1, 100 do
    wait(0.1)
    UpdateLoadingText()
end

-- Hide the loading screen when loading is complete
LoadingScreen:TweenOut(0.5) -- Replace with your own animation or method

